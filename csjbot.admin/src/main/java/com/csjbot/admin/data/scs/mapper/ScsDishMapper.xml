<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.csjbot.admin.data.scs.dao.ScsDishDAO">
	<resultMap id="BaseResultMap" type="com.csjbot.admin.data.scs.model.ScsDish">
		<id column="id" property="id" jdbcType="CHAR" />
		<result column="dish_type" property="dish_type" jdbcType="TINYINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="memo" property="memo" jdbcType="VARCHAR" />
		<result column="valid" property="valid" jdbcType="TINYINT" />
		<result column="price" property="price" jdbcType="DECIMAL" />
		<result column="updater_fk" property="updater_fk" jdbcType="CHAR" />
		<result column="creator_fk" property="creator_fk" jdbcType="CHAR" />
		<result column="date_update" property="date_update" jdbcType="TIMESTAMP" />
		<result column="date_create" property="date_create" jdbcType="TIMESTAMP" />
	</resultMap>

	<sql id="Base_Column_List">
		id, dish_type, name, memo, valid, price, updater_fk, creator_fk,
		date_update,date_create
	</sql>

	<select id="page" parameterType="map" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from scs_dish_info where valid = 1
		<if test="name != null and name !=''">
			and name LIKE CONCAT('%', #{name},'%')
		</if>
	</select>

	<delete id="delete" parameterType="map">
		delete from scs_dish_info
		where id = #{id,jdbcType=CHAR}
	</delete>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="map">
		select
		<include refid="Base_Column_List" />
		from scs_dish_info
		where id = #{id,jdbcType=CHAR}
	</select>

	<insert id="insert" parameterType="com.csjbot.admin.data.scs.model.ScsDesk">
		insert into scs_dish_info (id, dish_type, name, memo, valid, price,
		updater_fk, creator_fk, date_update,date_create)
		values (#{id,jdbcType=CHAR}, #{dish_type,jdbcType=TINYINT},
		#{name,jdbcType=VARCHAR}, #{memo,jdbcType=VARCHAR}, 1,
		#{price,jdbcType=DECIMAL},#{updater_fk,jdbcType=CHAR},#{creator_fk,jdbcType=CHAR},now(),
		now())
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="com.csjbot.admin.data.scs.model.ScsDish" >
    update scs_dish_info
    <set >
    <if test="dish_type != null" >
        dish_type = #{dish_type,jdbcType=TINYINT},
      </if>
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="price != null" >
        price = #{price,jdbcType=DECIMAL},
      </if>
      <if test="memo != null" >
        memo = #{memo,jdbcType=VARCHAR},
      </if>
      <if test="valid != null" >
        valid = #{valid,jdbcType=TINYINT},
      </if>
      <if test="updater_fk != null" >
        updater_fk = #{updater_fk,jdbcType=CHAR},
      </if>
      <if test="creator_fk != null" >
        creator_fk = #{creator_fk,jdbcType=CHAR},
      </if>
      <if test="date_update != null" >
        date_update = now(),
      </if>
      <if test="date_create != null" >
        date_create = #{date_create,jdbcType=TIMESTAMP},
      </if>
    </set>
    where id = #{id,jdbcType=CHAR}
  </update>
</mapper>

